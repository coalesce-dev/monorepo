{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@coalesce.dev/store-client": ["packages/store/client/src/index.ts"],
      "@coalesce.dev/store-client-react": [
        "packages/store/client-react/src/index.ts"
      ],
      "@coalesce.dev/store-common": ["packages/store/common/src/index.ts"],
      "@coalesce.dev/store-plugins-http": [
        "packages/store/plugins/http/src/index.ts"
      ],
      "@coalesce.dev/store-plugins-http-react": [
        "packages/store/plugins/http-react/src/index.ts"
      ],
      "@coalesce.dev/store-worker": ["packages/store/worker/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
